<div class="container">
        <div class="row row-login">
            <div class="col-10 col-sm-6 col-md-4 offset-1 offset-sm-3 offset-md-4">
                <h1 class="text-center">Login</h1>
                <div>
                    <div class="card-body">
                        <h5 class="text-danger text-center">Please enter your login and password </h5>
                        <form id="loginform">
                            <div class="form-group mb-3">
                              <label class="form-label">Email </label>
                              <input class="form-control" type="text" placeholder="Your Email" id="email_login" required="" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,15}$" inputmode="email">
                            </div>
                            <div class="form-group mb-3">
                              <label class="form-label">Password </label>
                              <input class="form-control" type="password" placeholder="Your Password" id="password_login" required="">
                            </div>
                            <div class="form-group mb-3">
                                <div class="form-check">
                                  <input class="form-check-input" type="checkbox" id="formCheck-1">
                                  <label class="form-check-label" for="formCheck-1">Remember me</label> 
                                  <a class="btn btn-link center-block" role="button" href="/forgetpass">Forget Password?</a>
                                </div>
                            </div>
                            <button class="btn btn-success d-block w-100" type="submit">LOGIN </button>
                            <p class="text-center">Don't have an account? <a href="/signup" class="text-success fw-bold">Sign Up</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="./js/login.js"></script>